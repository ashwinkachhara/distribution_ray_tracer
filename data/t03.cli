# motion-blurred spheres, just one sample per pixel

rays_per_pixel 1

fov 60
background .4 .4 1
point_light 5 5 5 1 1 1

translate 0 0 -4

diffuse   0.5 0 0  0.2 0 0
 
moving_sphere 0.5  0 1.4 0  0 1.4 0

moving_sphere 0.5  -.2 0 0  .2 0 0

moving_sphere 0.5  -.4 -1.4 0  .4 -1.4 0

write t03.png
